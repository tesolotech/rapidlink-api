# URL Shortener Security Configuration
# Copy this to .env and update values for your environment

# JWT Configuration
JWT_SECRET=my-super-secret-jwt-key-for-development-change-in-production

# Encryption Configuration (AES-256 requires 32-byte key)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=cIT0/hYQdTVCgXaOpRuOaq7qUCk++bExQJCu67M9gq4=

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/urlshortener

# CORS Configuration (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security Configuration
MAX_URL_LENGTH=2048
MAX_CUSTOM_LENGTH=20
TOKEN_EXPIRY_HOURS=24

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=100

# Server Configuration
PORT=8080
HOST=localhost
BASE_URL=http://localhost:8080
ALLOW_LOCALHOST=true

# Production Security Settings
# Uncomment and configure for production deployment
# HTTPS_ENABLED=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_ENABLED=true

# Development/Production Mode
ENVIRONMENT=development